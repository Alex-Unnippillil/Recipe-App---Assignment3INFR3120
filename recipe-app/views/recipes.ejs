<!-- views/recipes.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <%- include('partials/header'); %>

    <main class="container py-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">All Recipes</h1>
        <a href="/recipes/new" class="btn btn-success">Add Recipe</a>
      </div>

      <% if (!recipes || recipes.length === 0) { %>
        <p class="text-muted">No recipes found. Use the “Add Recipe” button to create your first one.</p>
      <% } else { %>
        <div class="list-group">
          <% recipes.forEach(recipe => { %>
            <a href="/recipes/<%= recipe._id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <div>
                <h5 class="mb-1"><%= recipe.title %></h5>
                <small class="text-muted">Cooking time: <%= recipe.cookingTime %> minutes</small>
              </div>
              <span class="badge bg-secondary">View &raquo;</span>
            </a>
          <% }); %>
        </div>
      <% } %>
    </main>

    <%- include('partials/footer'); %>
  </body>
</html>
