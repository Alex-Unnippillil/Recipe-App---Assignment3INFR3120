<!-- views/recipes.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head'); %>
  <%- /* set pageTitle = 'All Recipes' when rendering this view */ %>
</head>
<body>
  <%- include('partials/header'); %>
  <main class="container my-4">
    <h1 class="mb-4">All Recipes</h1>
    <% if (recipes.length === 0) { %>
      <p class="text-muted">No recipes found. Be the first to add a recipe!</p>
    <% } else { %>
      <div class="list-group">
        <% recipes.forEach(recipe => { %>
          <a href="/recipes/<%= recipe._id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <h5 class="mb-1"><%= recipe.title %></h5>
              <small class="text-muted">Cooking Time: <%= recipe.cookingTime %> min</small>
            </div>
            <span class="badge bg-secondary badge-pill">View &raquo;</span>
          </a>
        <% }) %>
      </div>
    <% } %>
  </main>
  <%- include('partials/footer'); %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
