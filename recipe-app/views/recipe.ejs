<!-- views/recipe.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head'); %>
</head>
<body>
  <%- include('partials/header'); %>
  <main class="container my-5">
    <h1><%= recipe.title %></h1>
    <p><strong>Cooking Time:</strong> <%= recipe.cookingTime %> minutes</p>
    <h4>Ingredients:</h4>
    <p><%= recipe.ingredients %></p>

    <hr/>
    <!-- Action buttons -->
    <a href="/recipes/<%= recipe._id %>/edit" class="btn btn-primary">Edit</a>
    <!-- Delete via form to POST  -->
    <form action="/recipes/<%= recipe._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('confirm you want to delete this recipe?');">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a href="/recipes/list" class="btn btn-secondary">Back to All Recipes</a>
  </main>
  <%- include('partials/footer'); %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
