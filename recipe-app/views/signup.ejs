<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <%- include('partials/header'); %>

    <main class="container my-5">
      <h1 class="mb-4">Sign Up</h1>

      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

      <div class="row">
        <section class="col-md-5">
          <h2 class="h5 mb-3">Sign up with OAuth</h2>
          <div class="d-grid gap-2">
            <a href="/auth/google" class="btn btn-outline-danger">
              Sign up with Google
            </a>
            <a href="/auth/github" class="btn btn-outline-dark">
              Sign up with GitHub
            </a>
          </div>
        </section>

        <div class="col-md-1 d-none d-md-flex align-items-center justify-content-center">
          <span class="text-muted">or</span>
        </div>

        <section class="col-md-6">
          <h2 class="h5 mb-3">Sign up with email</h2>

          <form action="/auth/signup" method="POST" class="card card-body shadow-sm">
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                autocomplete="email"
                required
              >
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
                autocomplete="new-password"
                minlength="6"
                required
              >
              <div class="form-text">Minimum 6 characters</div>
            </div>

            <p class="text-muted small mb-3">
              Already have an account? <a href="/auth/login">Sign in here</a>
            </p>

            <button type="submit" class="btn btn-primary w-100">
              Sign Up
            </button>
          </form>
        </section>
      </div>
    </main>

    <%- include('partials/footer'); %>
  </body>
</html>
