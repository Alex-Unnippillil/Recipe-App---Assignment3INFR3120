    <main class="container my-5">
      <h1 class="mb-4">Sign in</h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

      <div class="row gy-4">
        <!-- Social login column -->
        <section class="col-md-5">
          <p class="mb-3">Use Google or GitHub account to sign in.</p>

          <div class="d-grid gap-3">
            <a class="btn btn-outline-primary" href="/auth/google">
              Continue with Google
            </a>
            <a class="btn btn-outline-dark" href="/auth/github">
              Continue with GitHub
            </a>
          </div>
        </section>

        <!-- Divider -->
        <div class="col-md-1 d-none d-md-flex align-items-center justify-content-center">
          <span class="text-muted">or</span>
        </div>

        <!-- Email/password column -->
        <section class="col-md-6">
          <h2 class="h5 mb-3">Sign in with email</h2>

          <form action="/auth/login/email" method="POST" class="card card-body shadow-sm">
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                autocomplete="email"
                required
              >
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">
                Password
              </label>
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
                autocomplete="current-password"
                minlength="6"
                required
              >
            </div>

            <p class="text-muted small mb-3">
              If first time using email here, an account will be created
            </p>

            <button type="submit" class="btn btn-primary w-100">
              Continue with email
            </button>
          </form>
        </section>
      </div>
    </main>
