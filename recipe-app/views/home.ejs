<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <%- include('partials/header'); %>

    <main class="container py-5">
      <!-- Hero / splash section -->
      <section class="p-5 mb-5 rounded-3 text-center text-light hero">
        <h1 class="display-4 fw-bold">Recipe Share</h1>
        <p class="lead mb-4">
          Save your favourite recipes and never lose a great recipe again.
        </p>
        <a href="/recipes/list" class="btn btn-outline-light btn-lg me-2">Browse Recipes</a>
        <a href="/recipes/new" class="btn btn-light btn-lg">Add a Recipe</a>
      </section>

      <!-- Latest recipes section -->
      <% if (latestRecipes && latestRecipes.length > 0) { %>
        <section>
          <h2 class="mb-4">Latest Recipes</h2>
          <div class="row">
            <% latestRecipes.forEach(recipe => { %>
              <div class="col-md-4">
                <article class="card recipe-card mb-4 h-100">
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= recipe.title %></h5>
                    <p class="card-text text-muted mb-3">
                      Cooking time: <%= recipe.cookingTime %> minutes
                    </p>
                    <a href="/recipes/<%= recipe._id %>" class="btn btn-primary mt-auto">
                      View Recipe
                    </a>
                  </div>
                </article>
              </div>
            <% }); %>
          </div>
        </section>
      <% } else { %>
        <p class="text-muted text-center">
          No recipes yet. Try and <a href="/recipes/new">add one</a>!
        </p>
      <% } %>
    </main>

    <%- include('partials/footer'); %>
  </body>
</html>
