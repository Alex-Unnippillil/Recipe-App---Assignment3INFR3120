<!-- views/new.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head'); %>
</head>
<body>
  <%- include('partials/header'); %>
  <main class="container my-5">
    <h1>Add a New Recipe</h1>
    <form action="/recipes" method="POST" class="mt-4">
      <div class="mb-3">
        <label for="title" class="form-label">Recipe Title</label>
        <input type="text" name="title" id="title" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="ingredients" class="form-label">Ingredients</label>
        <textarea name="ingredients" id="ingredients" class="form-control" rows="4" required></textarea>
        <div class="form-text">List ingredients and quantities, separated by commas or lines.</div>
      </div>
      <div class="mb-3">
        <label for="cookingTime" class="form-label">Cooking Time (minutes)</label>
        <input type="number" name="cookingTime" id="cookingTime" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-success">Create Recipe</button>
      <a href="/recipes/list" class="btn btn-secondary">Cancel</a>
    </form>
  </main>
  <%- include('partials/footer'); %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
