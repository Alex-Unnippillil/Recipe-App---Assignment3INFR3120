<!-- views/new.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <%- include('partials/header'); %>

    <main class="container my-5">
      <h1 class="mb-4">Add a New Recipe</h1>

      <form action="/recipes" method="POST" class="col-lg-8 mx-auto">
        <div class="mb-3">
          <label for="title" class="form-label">Recipe title</label>
          <input type="text" name="title" id="title" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="ingredients" class="form-label">Ingredients</label>
          <textarea name="ingredients" id="ingredients" class="form-control" rows="4" required></textarea>
          <div class="form-text">
            List the ingredients and quantities, separated by commas and/or new lines.
          </div>
        </div>

        <div class="mb-3">
          <label for="cookingTime" class="form-label">Cooking time (minutes)</label>
          <input type="number" name="cookingTime" id="cookingTime" class="form-control" min="1" required>
        </div>

        <button type="submit" class="btn btn-success">Create recipe</button>
        <a href="/recipes/list" class="btn btn-secondary">Cancel</a>
      </form>
    </main>

    <%- include('partials/footer'); %>
  </body>
</html>
